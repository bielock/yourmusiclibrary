<p id="notice"><%= notice %></p>

<h1>Your Albums</h1>

<h3>
  <%= link_to "Artist", artists_path %>
  <%= link_to "Album", albums_path %>
  <%= link_to "Genre", genres_path %>
  <%= link_to "All Tracks", tracks_path %>
</h3>

<table>
  <thead>
    <tr>
      <th>Album</th>
      <th>Artist</th>
      <th>Year</th>
      <th>Genre</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @albums.each do |album| %>
      <tr>
        <td><%= link_to album.title, album_path(album) %></td>
        <td><%= album.artist.name %></td>
        <td><%= album.year %></td>
        <td><%= album.genre.gname %></td>
        <td><%= link_to 'Edit', edit_album_path(album) %></td>
        <td><%= link_to 'Delete', album, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Album', new_album_path %>

