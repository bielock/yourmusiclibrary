<p id="notice"><%= notice %></p>

<p>
  <strong>Artist:</strong>
  <%= @artist.name %>
</p>

<table class="table">
  <thead>
    <tr>
      <th>Album</th>
      <th>Year</th>
      <th>Genre</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @artist_albums.each do |album| %>
      <tr>
        <td><%= link_to album.title, album_path(album) %></td>
        <td><%= album.year %></td>
        <td><%= album.genre.gname %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to 'New Album', new_album_path, class: 'btn btn-success' %>
<%= link_to 'Back', albums_path, class: 'btn btn-info' %>

