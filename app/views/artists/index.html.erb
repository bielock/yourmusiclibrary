<p id="notice"><%= notice %></p>

<h1>Your Artists</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @artists.each do |artist| %>
      <tr>
        <td><%= link_to artist.name, artist_path(artist) %></td>
        <td><%= link_to 'Edit', edit_artist_path(artist), class: 'btn btn-warning btn-xs' %></td>
        <td><%= link_to 'Delete', artist, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-xs' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Artist', new_artist_path, class: 'btn btn-success' %>
<%= link_to 'Back', albums_path, class: 'btn btn-info' %>

