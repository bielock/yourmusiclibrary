<p id="notice"><%= notice %></p>

<h1>Your Genres</h1>

<table class="table">
  <thead>
    <tr>
      <th>Genre</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @genres.each do |genre| %>
      <tr>
        <td><%= link_to genre.gname, genre_path(genre) %></td>
        <td><%= link_to 'Edit', edit_genre_path(genre), class: 'btn btn-warning btn-xs' %></td>
        <td><%= link_to 'Delete', genre, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-xs' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Genre', new_genre_path, class: 'btn btn-success' %>
<%= link_to 'Back', albums_path, class: 'btn btn-info' %>

