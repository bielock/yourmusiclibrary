<p id="notice"><%= notice %></p>

<p>
  <strong>Genre:</strong>
  <%= @genre.gname %>
</p>

<table class="table">
  <thead>
    <tr>
      <th>Album</th>
      <th>Artist</th>
      <th>Year</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @genre_albums.each do |album| %>
      <tr>
        <td><%= link_to album.title, album_path(album) %></td>
        <td><%= album.artist.name %></td>
        <td><%= album.year %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Edit', edit_genre_path(@genre), class: 'btn btn-warning btn-xs' %> |
<%= link_to 'Back', genres_path, class: 'btn btn-info btn-xs' %>
